<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blank_frag_bg_image"

    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    tools:context=".MainActivity">


    <!--        <RelativeLayout-->
    <!--            android:layout_width="match_parent"-->
    <!--            android:layout_height="wrap_content"-->
    <!--            >-->
    <!--        </RelativeLayout>-->


    <ImageView
        android:id="@+id/back"
        android:layout_width="25sp"
        android:layout_height="25sp"
        android:src="@drawable/ic_baseline_arrow_back_24"
        android:layout_margin="20sp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_marginTop="40dp"
            android:id="@+id/rl"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_centerHorizontal="true">
            <de.hdodenhof.circleimageview.CircleImageView

                android:id="@+id/profilePic"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"


                android:src="@drawable/default_user"/>
            <RelativeLayout
                android:id="@+id/rl1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true">

                <ImageView
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:src="@drawable/black_circle"/>

                <ImageView
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/camera_icon" />

            </RelativeLayout>



        </RelativeLayout>



        <!--Edittext for getting users phone number-->

        <!--Button for getting OTP-->

        <!--            <RelativeLayout-->
        <!--                android:layout_marginBottom="200sp"-->
        <!--                android:layout_width="match_parent"-->
        <!--                android:layout_height="match_parent"-->
        <!--                android:orientation="vertical">-->

        <TextView
            android:layout_marginTop="20dp"
            android:layout_below="@+id/rl"
            android:layout_marginBottom="30dp"

            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginHorizontal="20sp"
            android:fontFamily="@font/open_sans"
            android:text="Customize your profile information to stand out from the crowd."
            android:textColor="#90FFFFFF"
            android:textSize="16dp"
            android:id="@+id/textView1"/>

<!--        <ImageView-->
<!--            android:id="@+id/EditDesc"-->
<!--            android:layout_width="20sp"-->
<!--            android:layout_height="20sp"-->
<!--            android:src="@drawable/baseline_edit_24"-->
<!--            android:layout_alignParentEnd="true"-->
<!--            android:layout_marginRight="20sp"/>-->
        <LinearLayout
            android:layout_below="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_marginTop="10sp"
                android:layout_below="@+id/RelativeLayout"
                android:id="@+id/RelativeLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20sp"
                    android:id="@+id/profileIcon"
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:src="@drawable/profile"/>

                <TextView
                    android:layout_toRightOf="@+id/profileIcon"
                    android:id="@+id/NameTextV"
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textSize="18dp"
                    android:textColor="#90FFFFFF"/>

                <EditText
                    android:layout_toRightOf="@+id/profileIcon"
                    android:layout_marginHorizontal="10dp"
                    android:layout_below="@+id/NameTextV"
                    android:id="@+id/Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:maxLength="14"
                    android:maxLines="1"
                    android:padding="5dp"
                    android:text="IamIronMan82"
                    android:textColor="@color/white"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Name"
                    android:text="Your user name will be visible to your Wired contacts"
                    android:textColor="#90FFFFFF"
                    android:layout_marginEnd="25dp"
                    android:layout_toRightOf="@+id/profileIcon"
                    android:fontFamily="@font/open_sans"
                    android:layout_marginStart="10dp"/>


                <ImageView
                    android:id="@+id/EditName"
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:src="@drawable/baseline_edit_24"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="20sp"/>


            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="20sp"
                android:layout_below="@+id/RelativeLayout"
                android:id="@+id/RelativeLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20sp"
                    android:id="@+id/PhoneIcon"
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:src="@drawable/baseline_smartphone_24"/>

                <TextView
                    android:layout_toRightOf="@id/PhoneIcon"
                    android:id="@+id/PhoneTextV"
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mobile"
                    android:textSize="18dp"
                    android:textColor="#90FFFFFF"/>

                <TextView
                    android:layout_toRightOf="@id/PhoneIcon"
                    android:layout_marginHorizontal="10sp"
                    android:layout_below="@+id/PhoneTextV"
                    android:id="@+id/Phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:importantForAutofill="no"
                    android:inputType="phone"
                    android:maxLength="14"
                    android:maxLines="1"
                    android:padding="5dp"
                    android:text="+91 8382877633"
                    android:textColor="@color/white"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Phone"
                    android:text="Your mobile number will not be shared with anyone except your contacts."
                    android:textColor="#90FFFFFF"
                    android:layout_marginEnd="25dp"
                    android:layout_toRightOf="@id/PhoneIcon"
                    android:fontFamily="@font/open_sans"
                    android:layout_marginStart="10dp"/>


            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="20sp"
                android:layout_below="@+id/RelativeLayout"
                android:id="@+id/RelativeLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20sp"
                    android:id="@+id/EmailIcon"
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:src="@drawable/baseline_mail_outline_24"/>

                <TextView
                    android:layout_toRightOf="@id/EmailIcon"
                    android:id="@+id/EmailTextV"
                    android:layout_marginStart="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mail"
                    android:textSize="18dp"
                    android:textColor="#90FFFFFF"/>

                <EditText
                    android:layout_marginEnd="40sp"
                    android:layout_toRightOf="@id/EmailIcon"
                    android:layout_marginStart="10sp"
                    android:layout_below="@+id/EmailTextV"
                    android:id="@+id/Email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:padding="5dp"
                    android:hint="tempMail32@gmail.com"
                    android:textColorHint="#95FFFFFF"
                    android:textColor="@color/white"
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/EditEmail"
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:src="@drawable/baseline_edit_24"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="20sp"/>

            </RelativeLayout>

        </LinearLayout>


    </RelativeLayout>

    <TextView

        android:layout_alignParentBottom="true"
        android:id="@+id/save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="70dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/theme_rect"
        android:gravity="center"
        android:padding="10dp"
        android:text="Save changes"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textColorHint="#CDF1FB" />
    <!--        </RelativeLayout>-->





</RelativeLayout>