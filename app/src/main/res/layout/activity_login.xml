<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blank_frag_bg_image"

    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    tools:context=".MainActivity">


<!--        <RelativeLayout-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            >-->
<!--        </RelativeLayout>-->



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="130sp"
                android:layout_height="130sp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20sp"

                android:src="@drawable/logo"/>

            <!--Edittext for getting users phone number-->

            <!--Button for getting OTP-->

<!--            <RelativeLayout-->
<!--                android:layout_marginBottom="200sp"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="match_parent"-->
<!--                android:orientation="vertical">-->

                <TextView
                    android:layout_marginTop="30dp"
                    android:layout_below="@+id/logo"
                    android:layout_marginBottom="30dp"

                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enter mobile number"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:id="@+id/textView1"/>

                <RelativeLayout
                    android:layout_below="@+id/textView1"
                    android:id="@+id/RelativeLayout"
                    android:background="@drawable/transparent_rect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="40dp">

                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+91"
                        android:layout_alignParentStart="true"
                        android:textSize="18sp"
                        android:textColor="@color/white"/>

                    <EditText
                        android:layout_marginStart="30sp"
                        android:paddingHorizontal="10sp"
                        android:id="@+id/idEdtPhoneNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:hint="Phone Number"
                        android:importantForAutofill="no"
                        android:inputType="phone"
                        android:maxLength="10"
                        android:maxLines="10"
                        android:padding="10dp"
                        android:paddingStart="30dp"
                        android:paddingBottom="50dp"
                        android:textColor="@color/white"
                        android:textColorHint="#303030"
                        android:textSize="18sp" />


                </RelativeLayout>

                <TextView
                    android:layout_below="@id/RelativeLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_centerHorizontal="true"
                    android:layout_marginHorizontal="30dp"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:text="Your mobile number wil not be shared with anyone "/>

            </RelativeLayout>
    <LinearLayout
        android:layout_marginStart="20sp"
        android:layout_above="@+id/idBtnGetOtp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/TermsAndConditions"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginEnd="20sp"
            android:text="@string/terms_and_conditions"/>
    </LinearLayout>

                <TextView

                    android:layout_alignParentBottom="true"
                    android:id="@+id/idBtnGetOtp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:layout_marginHorizontal="70dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/theme_rect"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Get OTP"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textColorHint="#CDF1FB" />
<!--        </RelativeLayout>-->





</RelativeLayout>