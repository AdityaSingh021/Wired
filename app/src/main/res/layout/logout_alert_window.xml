<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#011216"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20sp"
        android:layout_marginTop="10sp"/>
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieAnimationView"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        app:lottie_rawRes="@raw/logout_anim"
        app:lottie_autoPlay="true"
        app:lottie_loop="true" />
    <TextView
        android:fontFamily="@font/open_sans"
        android:layout_below="@+id/lottieAnimationView"
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="You are trying to logout from this account."
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_marginHorizontal="20sp"
        android:gravity="center"
        android:layout_marginTop="10sp"/>
    <TextView
        android:fontFamily="@font/open_sans"
        android:id="@+id/textView1"
        android:layout_below="@id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Are you Sure?"
        android:textColor="@color/white"
        android:textSize="13dp"
        android:layout_marginHorizontal="20sp"
        android:gravity="center"
        android:layout_marginTop="10sp"/>
    <TextView
        android:id="@+id/logOut"
        android:layout_marginBottom="20sp"
        android:textStyle="bold"
        android:background="@drawable/theme_green_rect"
        android:paddingVertical="10sp"
        android:layout_below="@id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="LogOut"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:layout_marginHorizontal="40sp"
        android:gravity="center"
        android:layout_marginTop="30sp"/>

</RelativeLayout>