<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/oppoLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="30dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"

                app:cardBackgroundColor="#303030"
                android:layout_marginStart="10sp">

                <ImageView
                    android:adjustViewBounds="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ImageByOpp"/>

            </androidx.cardview.widget.CardView>


            <TextView
                android:fontFamily="@font/open_sans"
                android:paddingHorizontal="10dp"
                android:id="@+id/oppoMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/recieve_msg"
                android:paddingVertical="5dp"
                android:textSize="16dp"
                android:text="This is opponent message"
                android:textColor="@color/white" />


            <TextView
                android:id="@+id/oppoMsgTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="25-01-2023 10:30 PM"
                android:textColor="#FCF5D2"
                android:textSize="10dp" />


        </LinearLayout>


        <LinearLayout
            android:layout_marginStart="30dp"
            android:id="@+id/MyLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:paddingEnd="10dp"
            android:paddingBottom="10dp"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"

                app:cardBackgroundColor="#303030"
                android:layout_marginStart="10sp">

                <ImageView
                    android:adjustViewBounds="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageByMe"/>

            </androidx.cardview.widget.CardView>


            <TextView
                android:textSize="16dp"

                android:fontFamily="@font/open_sans"
                android:id="@+id/myMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:background="@drawable/send_msg"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:text="This is my message"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/myMsgTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="5dp"
                android:paddingStart="20dp"
                android:text="25-01-2023 10:30 PM"
                android:textColor="#DFF1FF"
                android:textSize="10dp" />


        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>