<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#011216"
    tools:context=".MatchingAnimation">

    <TextView
        android:fontFamily="@font/open_sans"
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We're sorry to see you leaving"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginHorizontal="20sp"
        android:layout_marginTop="30sp"/>
    <TextView
        android:fontFamily="@font/open_sans"
        android:id="@+id/textView1"
        android:layout_below="@id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Deleting your account will remove all of your data from our database. This cannot be undone "
        android:textColor="#90FFFFFF"
        android:textSize="13sp"
        android:layout_marginHorizontal="20sp"
        android:layout_marginTop="10sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@id/textView1"
        android:layout_marginTop="30sp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30sp">

        <TextView
            android:id="@+id/Delete"
            android:textStyle="bold"
            android:background="@drawable/transparent_rect"
            android:paddingVertical="10sp"
            android:paddingHorizontal="5sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Delete account anyway"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_marginStart="20sp"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/cancel"
            android:textStyle="bold"
            android:background="@drawable/theme_green_rect"
            android:paddingVertical="10sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Keep account"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_marginHorizontal="20sp"
            android:gravity="center"
            />
    </LinearLayout>

</RelativeLayout>